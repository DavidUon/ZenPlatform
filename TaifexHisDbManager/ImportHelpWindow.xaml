<Window x:Class="TaifexHisDbManager.ImportHelpWindow"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="匯入說明"
        MinWidth="640" MinHeight="420" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="#E6E6E6"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#464646" BorderThickness="1" CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="HelpTextBlock" Margin="12" TextWrapping="Wrap" FontSize="15"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="100" Padding="8,4" Click="OnCloseClick">關閉</Button>
        </StackPanel>
    </Grid>
</Window>
