<Window x:Class="Charts.MaSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="均線參數設定" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" Background="#101014" Foreground="#E8E8E8"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" SnapsToDevicePixels="True">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#18181D"/>
        <SolidColorBrush x:Key="InputBg" Color="#202027"/>
        <SolidColorBrush x:Key="BorderDark" Color="#3C3C46"/>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="#333645"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBg}" CornerRadius="6" Margin="12" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 操作：新增 / 刪除 -->
            <TextBlock Text="操作：" Margin="0,0,8,10"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="RbAdd" Content="新增" IsChecked="True" Margin="0,0,12,0"/>
                <RadioButton x:Name="RbRemove" Content="刪除"/>
            </StackPanel>

            <TextBlock Text="期間 (N)：" Grid.Row="1" Margin="0,0,8,10"/>
            <TextBox x:Name="PeriodBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

            <TextBlock Text="型態：" Grid.Row="2" Margin="0,0,8,10"/>
            <!-- 覆蓋本欄的前景為黑色、背景白，以利辨識 -->
            <ComboBox x:Name="TypeBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Background="White" Foreground="Black">
                <ComboBoxItem Content="MA"/>
                <ComboBoxItem Content="EMA"/>
            </ComboBox>

            <TextBlock Text="線條顏色：" Grid.Row="3" Margin="0,0,8,10"/>
            <StackPanel x:Name="ColorPanel" Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                <UniformGrid Columns="6" Rows="2">
                    <!-- 12 常用顏色 -->
                    <Button Width="22" Height="22" Margin="2" Background="#FFD700" Click="Color_Click" Tag="#FFD700"/>
                    <Button Width="22" Height="22" Margin="2" Background="#64A0FF" Click="Color_Click" Tag="#64A0FF"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FF6B6B" Click="Color_Click" Tag="#FF6B6B"/>
                    <Button Width="22" Height="22" Margin="2" Background="#2ECC71" Click="Color_Click" Tag="#2ECC71"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FFA500" Click="Color_Click" Tag="#FFA500"/>
                    <Button Width="22" Height="22" Margin="2" Background="#9B59B6" Click="Color_Click" Tag="#9B59B6"/>
                    <Button Width="22" Height="22" Margin="2" Background="#1ABC9C" Click="Color_Click" Tag="#1ABC9C"/>
                    <Button Width="22" Height="22" Margin="2" Background="#E91E63" Click="Color_Click" Tag="#E91E63"/>
                    <Button Width="22" Height="22" Margin="2" Background="#00BCD4" Click="Color_Click" Tag="#00BCD4"/>
                    <Button Width="22" Height="22" Margin="2" Background="#CDDC39" Click="Color_Click" Tag="#CDDC39"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FFC107" Click="Color_Click" Tag="#FFC107"/>
                    <Button Width="22" Height="22" Margin="2" Background="#95A5A6" Click="Color_Click" Tag="#95A5A6"/>
                </UniformGrid>
                <TextBox x:Name="ColorBox" Width="90" Margin="8,0,0,0" IsReadOnly="True"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Width="90" Margin="4" Content="確定" IsDefault="True" Click="Ok_Click"/>
                <Button Width="90" Margin="4" Content="取消" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
