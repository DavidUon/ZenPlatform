<Window x:Class="Charts.AppearLayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="技術指標" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#000000">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="16" Background="#000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <CheckBox x:Name="CbCrosshair" Content="顯示十字座標" />
            <CheckBox x:Name="CbTooltip" Content="顯示查價視窗" />
            <Separator Margin="0,10,0,10"/>
            <CheckBox x:Name="CbMa"   Content="均線" />
            <CheckBox x:Name="CbBbi"  Content="BBI 指標" />
            <CheckBox x:Name="CbBoll" Content="布林通道"   />
            <Separator Margin="0,10,0,10"/>
            <CheckBox x:Name="CbVol"  Content="成交量" />
            <CheckBox x:Name="CbKd"   Content="KD 指標"    />
            <CheckBox x:Name="CbMacd" Content="MACD 指標" />
        </StackPanel>
    </Grid>
</Window>
