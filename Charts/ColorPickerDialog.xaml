<Window x:Class="Charts.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="選擇顏色" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" Background="#101014" Foreground="#E8E8E8"
        TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="ClearType" SnapsToDevicePixels="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <SolidColorBrush x:Key="PanelBg" Color="#18181D"/>
        <SolidColorBrush x:Key="InputBg" Color="#202027"/>
        <SolidColorBrush x:Key="BorderDark" Color="#3C3C46"/>
        <SolidColorBrush x:Key="BrushButtonBackground" Color="#2A2F3A"/>
        <SolidColorBrush x:Key="BrushButtonBorder" Color="#3C3C46"/>
        <SolidColorBrush x:Key="BrushText" Color="#E8E8E8"/>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBg}"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="Slider">
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>
        <Style x:Key="StrategyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BrushButtonBackground}" />
            <Setter Property="Foreground" Value="{StaticResource BrushText}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushButtonBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF787878" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF606060" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SwatchButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="BorderBrush" Value="#2A2A33"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBg}" CornerRadius="6" Margin="12" Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Border Width="64" Height="64" CornerRadius="4" BorderBrush="#444" BorderThickness="1" Margin="0,0,10,0">
                    <Rectangle x:Name="PreviewRect" Fill="#FFD700"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="預覽" Foreground="#CFCFD6" Margin="0,0,0,6"/>
                    <TextBlock x:Name="HexText" Text="#FFD700" Foreground="#E6E6E6" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="R" VerticalAlignment="Center"/>
                <Slider x:Name="RSlider" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="RBox" Grid.Column="2" Margin="8,0,0,0" LostFocus="Box_LostFocus"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="G" VerticalAlignment="Center"/>
                <Slider x:Name="GSlider" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="GBox" Grid.Column="2" Margin="8,0,0,0" LostFocus="Box_LostFocus"/>
            </Grid>

            <Grid Grid.Row="3" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="B" VerticalAlignment="Center"/>
                <Slider x:Name="BSlider" Grid.Column="1" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged"/>
                <TextBox x:Name="BBox" Grid.Column="2" Margin="8,0,0,0" LostFocus="Box_LostFocus"/>
            </Grid>

            <StackPanel Grid.Row="4">
                <UniformGrid Columns="6" Rows="4" Margin="0,0,0,10">
                    <Button Width="22" Height="22" Margin="2" Background="#FFD700" Click="Palette_Click" Tag="#FFD700" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#64A0FF" Click="Palette_Click" Tag="#64A0FF" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FF6B6B" Click="Palette_Click" Tag="#FF6B6B" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#2ECC71" Click="Palette_Click" Tag="#2ECC71" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FFA500" Click="Palette_Click" Tag="#FFA500" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#9B59B6" Click="Palette_Click" Tag="#9B59B6" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#1ABC9C" Click="Palette_Click" Tag="#1ABC9C" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#E91E63" Click="Palette_Click" Tag="#E91E63" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#00BCD4" Click="Palette_Click" Tag="#00BCD4" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#CDDC39" Click="Palette_Click" Tag="#CDDC39" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FFC107" Click="Palette_Click" Tag="#FFC107" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#95A5A6" Click="Palette_Click" Tag="#95A5A6" Style="{StaticResource SwatchButtonStyle}"/>

                    <Button Width="22" Height="22" Margin="2" Background="#FF8C00" Click="Palette_Click" Tag="#FF8C00" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#00A8FF" Click="Palette_Click" Tag="#00A8FF" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FF4757" Click="Palette_Click" Tag="#FF4757" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#2ED573" Click="Palette_Click" Tag="#2ED573" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#ECCC68" Click="Palette_Click" Tag="#ECCC68" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#A55EEA" Click="Palette_Click" Tag="#A55EEA" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#1E90FF" Click="Palette_Click" Tag="#1E90FF" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#FF7F50" Click="Palette_Click" Tag="#FF7F50" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#7BED9F" Click="Palette_Click" Tag="#7BED9F" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#70A1FF" Click="Palette_Click" Tag="#70A1FF" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#57606F" Click="Palette_Click" Tag="#57606F" Style="{StaticResource SwatchButtonStyle}"/>
                    <Button Width="22" Height="22" Margin="2" Background="#2F3542" Click="Palette_Click" Tag="#2F3542" Style="{StaticResource SwatchButtonStyle}"/>
                </UniformGrid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="90" Margin="4" Content="確定" IsDefault="True" Click="Ok_Click" Style="{StaticResource StrategyButtonStyle}"/>
                    <Button Width="90" Margin="4" Content="取消" IsCancel="True" Style="{StaticResource StrategyButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
