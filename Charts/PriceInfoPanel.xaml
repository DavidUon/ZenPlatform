<UserControl x:Class="Charts.PriceInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200" MinWidth="0"
             Background="Transparent">
    <UserControl.Resources>
        <Style x:Key="CenteredInfoText" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ActualWidth}" />
        </Style>
    </UserControl.Resources>
    <StackPanel x:Name="RootStack" Orientation="Vertical" Margin="0,0,0,0"
                HorizontalAlignment="Stretch">
        <Border Background="#FF3A3A3A" Padding="0,4,0,4">
            <TextBlock x:Name="TitleText" Foreground="White" FontSize="{DynamicResource ChartFontSizeLg}" FontWeight="Bold"
                       Style="{StaticResource CenteredInfoText}"/>
        </Border>
        <!-- Contract info block -->
        <StackPanel x:Name="ContractPanel" Orientation="Vertical" Margin="0,10,0,0" Visibility="Collapsed" HorizontalAlignment="Stretch">
            <TextBlock x:Name="ContractNameLabel" Text="商品" Foreground="#969696" FontSize="{DynamicResource ChartFontSizeMd}"
                       Style="{StaticResource CenteredInfoText}"/>
            <TextBlock x:Name="ContractNameText" Foreground="White" FontSize="{DynamicResource ChartFontSizeLg}" FontWeight="Bold"
                       Style="{StaticResource CenteredInfoText}"/>
            <TextBlock x:Name="ContractYmLabel" Text="合約月份" Foreground="#969696" FontSize="{DynamicResource ChartFontSizeMd}" Margin="0,8,0,0"
                       Style="{StaticResource CenteredInfoText}"/>
            <TextBlock x:Name="ContractYmText" Foreground="White" FontSize="{DynamicResource ChartFontSizeMd}" FontWeight="Bold"
                       Style="{StaticResource CenteredInfoText}"/>
        </StackPanel>

        <!-- Quote info block (placeholders allowed) -->
        <StackPanel x:Name="QuotePanel" Orientation="Vertical" Margin="0,10,0,0" Visibility="Collapsed" HorizontalAlignment="Stretch">
            <TextBlock Text="報價時間" Foreground="#969696" FontSize="{DynamicResource ChartFontSizeMd}"
                       Style="{StaticResource CenteredInfoText}"/>
            <TextBlock x:Name="QuoteTimeText" Foreground="White" FontSize="{DynamicResource ChartFontSizeSm}" Text="---"
                       Style="{StaticResource CenteredInfoText}"/>

            <TextBlock Text="成交價" Foreground="#969696" FontSize="{DynamicResource ChartFontSizeMd}" Margin="0,8,0,0"
                       Style="{StaticResource CenteredInfoText}"/>
            <TextBlock x:Name="LastPriceText" Foreground="Yellow" FontSize="{DynamicResource ChartFontSizeSm}" Text="---"
                       Style="{StaticResource CenteredInfoText}"/>
        </StackPanel>
        <WrapPanel x:Name="TagsPanel" Margin="0,6,0,0" Visibility="Collapsed" HorizontalAlignment="Center"/>
        <StackPanel x:Name="LinesPanel" Orientation="Vertical" Margin="0,6,0,6" HorizontalAlignment="Stretch"/>
        <!-- Sections for MA / BOLL etc. Each section = header + lines -->
        <StackPanel x:Name="SectionsPanel" Orientation="Vertical" Margin="0,6,0,0" HorizontalAlignment="Stretch"/>
    </StackPanel>
</UserControl>
