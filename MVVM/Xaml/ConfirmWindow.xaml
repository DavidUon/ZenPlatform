<Window x:Class="ZenPlatform.ConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="確認" Width="380" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText" TextWrapping="Wrap" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="否" Margin="0,0,8,0" Click="OnNoClick" />
            <Button Content="是" Click="OnYesClick" />
        </StackPanel>
    </Grid>
</Window>
