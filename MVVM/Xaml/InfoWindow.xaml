<Window x:Class="ZenPlatform.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="資訊" Height="286" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="HeaderText" FontSize="20" FontWeight="SemiBold"
                           Foreground="#FFFFFFFF" VerticalAlignment="Bottom" />
                <TextBlock x:Name="ModifyProfileText" Text="修改個人資料" FontSize="13" Margin="10,0,0,0"
                           VerticalAlignment="Bottom" Cursor="Hand" MouseLeftButtonUp="OnModifyProfileClick">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource BrushInputBorder}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
            <Border Height="1" Margin="0,8,0,0" Background="{StaticResource BrushBorder}" />
        </StackPanel>

        <TextBlock x:Name="BodyText" Grid.Row="2" TextWrapping="Wrap" />

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="期貨密碼：" />
            <Button x:Name="ChangePasswordButton" Content="更改密碼" Margin="8,0,0,0" Click="OnChangePasswordClick" />
        </StackPanel>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="LogoutButton" Content="登出" Margin="0,0,8,0" Click="OnLogoutClick" />
            <Button Content="確定" Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>
