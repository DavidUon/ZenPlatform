<Window x:Class="ZenPlatform.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="訊息" Width="360" SizeToContent="Height" MinHeight="120"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText" TextWrapping="Wrap" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ExtraButton" Content="我要開戶" Margin="0,0,8,0" Visibility="Collapsed" Click="OnExtraClick" />
            <Button x:Name="OkButton" Content="確定" Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>
