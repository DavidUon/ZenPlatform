<Window x:Class="ZenPlatform.DdeSubscribeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="選擇交易合約" Width="360" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="商品" VerticalAlignment="Center" />
        <ComboBox x:Name="ProductBox" Grid.Row="0" Grid.Column="1" Height="28"
                  Style="{StaticResource DarkComboBoxStyle}"
                  ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="月份" VerticalAlignment="Center" />
        <ComboBox x:Name="MonthBox" Grid.Row="2" Grid.Column="1" Height="28"
                  Style="{StaticResource DarkComboBoxStyle}"
                  ItemContainerStyle="{StaticResource DarkComboBoxItemStyle}" />

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="取消" Margin="0,0,8,0" Click="OnCancelClick" />
            <Button Content="確定" Click="OnConfirmClick" />
        </StackPanel>
    </Grid>
</Window>
