<Window x:Class="ZenPlatform.SendingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="提示" Height="140" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" VerticalAlignment="Center" />
    </Grid>
</Window>
