<Window x:Class="ZenPlatform.ChangeBrokerPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="更改期貨密碼" Width="380" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="期貨密碼" VerticalAlignment="Center" />
        <TextBox x:Name="BrokerPasswordBox" Grid.Row="0" Grid.Column="1" Height="28" />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="取消" Margin="0,0,8,0" Click="OnCancelClick" />
            <Button Content="儲存" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
