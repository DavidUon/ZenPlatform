<Window x:Class="ZenPlatform.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="修改個人資料" Width="420" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Email" VerticalAlignment="Center" />
        <TextBox x:Name="EmailBox" Grid.Row="0" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="姓名" VerticalAlignment="Center" />
        <TextBox x:Name="NameBox" Grid.Row="2" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="4" Grid.Column="0" Text="電話" VerticalAlignment="Center" />
        <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Line ID" VerticalAlignment="Center" />
        <TextBox x:Name="LineIdBox" Grid.Row="6" Grid.Column="1" Height="28" />

        <Grid Grid.Row="8" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="若要改變Magistock密碼，填寫以下欄位修改" Foreground="{StaticResource BrushMutedText}" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="(非期貨帳戶登入密碼)" Foreground="{StaticResource BrushMutedText}" HorizontalAlignment="Stretch" TextAlignment="Right" />
        </Grid>

        <TextBlock Grid.Row="10" Grid.Column="0" Text="舊密碼" VerticalAlignment="Center" />
        <PasswordBox x:Name="OldPasswordBox" Grid.Row="10" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="12" Grid.Column="0" Text="新密碼" VerticalAlignment="Center" />
        <PasswordBox x:Name="NewPasswordBox" Grid.Row="12" Grid.Column="1" Height="28" />

        <TextBlock Grid.Row="14" Grid.Column="0" Text="確認新密碼" VerticalAlignment="Center" />
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="14" Grid.Column="1" Height="28" />

        <StackPanel Grid.Row="15" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="取消" Margin="0,0,8,0" Click="OnCancelClick" />
            <Button Content="儲存" Click="OnSaveClick" />
        </StackPanel>
    </Grid>
</Window>
