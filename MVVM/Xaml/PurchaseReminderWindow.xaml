<Window x:Class="ZenPlatform.PurchaseReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="需要有效授權" Width="420"
        SizeToContent="Height"
        MinHeight="140"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16,14,16,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText" TextWrapping="Wrap" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="聯絡客服" Margin="0,0,8,0" Click="OnSupportClick" />
            <Button Content="關閉" Click="OnStopClick" />
        </StackPanel>
    </Grid>
</Window>
