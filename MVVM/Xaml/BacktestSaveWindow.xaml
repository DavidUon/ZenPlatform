<Window x:Class="ZenPlatform.BacktestSaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="回測資訊存檔"
        Width="560"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}"
        ShowInTaskbar="False">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="72" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="是否將本次回測過程內容存檔以便複查?" />

        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="路徑" />
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="FolderTextBox" Margin="8,0,8,0" />
        <Button Grid.Row="2" Grid.Column="2" Width="32" Height="28" Content="..." Click="OnBrowseClick" />

        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="檔名" />
        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="FileNameTextBox" Margin="8,0,0,0" />

        <StackPanel Grid.Row="6" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="84" Height="30" Margin="0,0,8,0" Content="取消" Click="OnCancelClick" />
            <Button Width="84" Height="30" Content="確定" Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>
