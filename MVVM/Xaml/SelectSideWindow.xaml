<Window x:Class="ZenPlatform.SelectSideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="建立新任務" Width="360" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BrushWindowBackground}"
        Foreground="{StaticResource BrushText}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="請選擇任務方向" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="空單" Margin="0,0,8,0" Click="OnShortClick" />
            <Button Content="多單" Click="OnLongClick" />
        </StackPanel>
    </Grid>
</Window>
